<div class="bg-light">
  <div class="container pt-3">
    <div class="row">
      <div class="text-center">
        <h2 class="text-success"><strong>Ask a question</strong></h2>
        <h6 class="text-muted pb-3">Post a question and get a response from the community</h6>
        <%= link_to "Back to Forum", categories_path, class: 'btn btn-round btn-success mt-2 mb-3' %>
      </div>
    </div>
  </div>
</div>
<div class="row bg-white pb-5">
  <div class=" col-lg-6 col-md-8  m-auto ">
    <div class=" p-3">
      <div class="mt-3">
        <%= simple_form_for @post do |f| %>

          <div class="form-inputs">
            <%= f.input :category_id, collection: Category.all, label_method: :title, value_method: :id, input_html: { class: 'form-control bg-white' } %>
            <%= f.input :title, label: "Subject", input_html: { class: 'form-control bg-white' } %>
            <%= f.input :content, label: "Body", input_html: { class: 'form-control bg-white', rows: 10, cols: 50 }   %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, class: "btn btn-success mt-2" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<br>
