<%= simple_form_for(@appointment, html: { class: "form-horizontal" }) do |f| %>
  <div class="form-group">
    <div class="col-md-9">
      <%= f.input :appointment_date, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-9">
      <%= f.input :appointment_time, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-9">
      <%= f.input :description_of_problem, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-9">
      <%= f.collection_select :pet_profile_id, current_user.pet_profiles, :id, :name, { prompt: "Select your pet" }, { class: "form-control" } %>
    </div>
  </div>
  <br>
  <div class="form-group">
    <div class="col-md-9">
      <%= f.collection_select :user_id, User.where(vet: true), :id, :email, { prompt: "Select a Vet" }, { class: "form-control" } %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-3 col-md-9">
      <br>
      <%= f.button :submit, "Request Appointment", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
