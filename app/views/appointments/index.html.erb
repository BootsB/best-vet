<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header">
          <% unless current_user.vet? %>
            <%= link_to new_appointment_path, class: "btn btn-success" do %>
              <i class="fas fa-plus"></i> New Appointment
            <% end %>
          <% end %>
        </div>
        <div class="card-body">
          <div class="row">
            <div class="col-md-12">
              <h1 class="text-center">Appointments</h1>
            </div>
          </div>
          <div class="row">
            <div class="col-md-12 mb-4" style="overflow-y: auto; max-height: 500px;">
              <% @appointments.each do |appointment| %>
                <%= link_to appointment_path(appointment), class: "text-decoration-none" do %>
                  <div class="card mb-3">
                    <div class="card-body">
                      <h5 class="card-title text-center"><i class="fas fa-paw"></i> Consultation for <%= appointment.pet_profile.name %></h5>
                      <br>
                      <p><i class="fas fa-hashtag"></i> Reference ID: <%= appointment.id %></p>
                      <p><%= content_tag :i, "", class: "fa-solid fa-calendar" %> <%= appointment.appointment_date.strftime("%B %d, %Y") %></p>
                      <p><strong><%= content_tag :i, "", class: "fa-solid fa-clock" %> </strong> <%= appointment.appointment_time.strftime("%I:%M %p") %></p>
                      <% icon_class = case appointment.status.to_sym
                        when :pending
                          "fa-solid fa-clock" # Default black
                        when :accepted
                          "fa-solid fa-check-circle text-success" # Green
                        when :declined
                          "fa-solid fa-times-circle text-danger" # Red
                        when :confirmed
                          "fa-solid fa-check-double" # Confirmed icon
                        else
                          "fa-solid fa-question-circle" # Default if status is not recognized
                      end %>
                      <p><strong><%= content_tag :i, "", class: icon_class %></strong> <%= appointment.status.capitalize %></p>
                    </div>
                    <% if current_user.vet? && appointment.pending? %>
                      <div class="card-footer">
                        <%= link_to accept_appointment_path(appointment), method: :get, class: "btn btn-success mr-2", title: "Accept" do %>
                          <i class="fas fa-check"></i> Accept
                        <% end %>
                        <%= link_to reject_appointment_path(appointment), method: :get, class: "btn btn-danger", title: "Reject" do %>
                          <i class="fas fa-times"></i> Reject
                        <% end %>
                      </div>
                    <% end %>
                  </div>
                <% end %>
              <% end %>
            </div>
          </div>
        </div> <!-- Closing card-body -->
      </div> <!-- Closing card -->
    </div> <!-- Closing col-md-8 -->
  </div> <!-- Closing row justify-content-center -->
</div> <!-- Closing container -->
