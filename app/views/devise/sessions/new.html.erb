<div class="container signupformcontainer">
  <div class="row justify-content-center">
    <div class="col-md-8 col-lg-12">

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="card shadow-sm">
          <div class="card-body">
            <div class="form-group">
              <div class="input-group">
                <div class="input-group-prepend">
                  <span class="input-group-text"><i class="fa-solid fa-at"></i></span>
                </div>
                <%= f.email_field :email, required: false, autofocus: true, autocomplete: "email", class: "form-control" %>
              </div>
            </div>

            <div class="form-group">
              <div class="input-group">
                <div class="input-group-prepend">
                  <span class="input-group-text"><i class="fa-solid fa-lock"></i></span>
                </div>
                <%= f.password_field :password, required: false, autocomplete: "current-password", class: "form-control" %>
              </div>
            </div>


            <% if devise_mapping.rememberable? %>
              <div class="form-group">
                <%= f.input :remember_me, as: :boolean, label: "Remember Me", input_html: { class: "form-check-input" } %>
              </div>
            <% end %>

            <div class="form-group text-center">
              <%= f.button :submit, "Sign in", class: "btn btn-primary btn-block submitfbtn" %>
              <div class="linklogin">
                <%= render "devise/shared/links" %>
              </div>
            </div>
          </div>
        </div>
      <% end %>

    </div>
  </div>
</div>
