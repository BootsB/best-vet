<div class="bg-white pb-5">
  <div class="container pt-3">
    <div class="row px-1">
      <div class="col-sm-12 mb-4">
        <div class="membership-card">
          <div class="d-flex justify-content-center mt-3">
            <%= cl_image_tag @order.membership.photo.key, height: 50, width: 50, alt:"Membership icon"%>
          </div>
          <h2 class="mt-3 text-center text-success"><strong>Order #<%= @order.id %></strong></h2>
          <ul class="list-unstyled text-center">
            <li><strong><%= @order.state.capitalize %></strong></li>
            <li><strong>Issued On:</strong> <%= @order.created_at.to_date %></li>
            <li><strong>Membership:</strong> <%= @order.membership.name %></li>
            <li><strong>Total:</strong> <%= humanized_money_with_symbol @order.amount %>/month</li>
          </ul>
          <p class="text-center">Membership available <strong>immediately</strong></p>
        </div>
      </div>
    </div>
  </div>
</div>
